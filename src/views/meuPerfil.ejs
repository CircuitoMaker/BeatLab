function sairSistema(){
   console.log("Sessão finalizada 1!");
var data = new Date(2020,0,01);
data = data.toGMTString();
document.cookie = 'userLogged=busca; expires=' + data + ';';
console.log("Sessão finalizada 2!");
//window.location.href = "/login";
}
           </script>

        </div>
    </div> 


</main>













