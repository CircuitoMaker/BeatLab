
 <link rel="stylesheet" href="/stylesheets/home.css">
 <script src="/javascripts/home.js" defer></script>

<%- include('partials/header')%>


      <main>

        <% var playLists=["Ar Puro","Heavy Metal","Café da Manhã","Eletrônicas","Treino"] %>
            <h1 class="playLists">Playlists </h1>
            <div class="container-cardPlay">       
            <% for(var i=0; i < 5  ; i++) { %>               
                <div class="card-playlist">
                    <img src= <%= "../images/playlists-img/" + i + ".jpg "%> alt="" >
                    <footer>
                        <span class="span"><%= playLists[i]   %></span>
                    </footer>         
                </div>           
             <% } %>   
        </div>
        
     

        
            <h1 class="recentes">Bombando Agora</h1> 
            <div class="container-recentes">                  
                    <% for(var i=ouvidasRecentes.length-1; i >  ouvidasRecentes.length-6; i--) { %>               
                        <div class="card-recente">                           
                            <img id=<%= 'capaAlbum' + i %> src= <%= ouvidasRecentes[i].imagem %> alt="">   
                            <span id=<%= 'labelMusica' + i %> ><%= ouvidasRecentes[i].musica %></span>                                                                                                                                                                                                       
                        </div>                 
                     <% } %>   
            </div>
       



        <h1 class="topH1">Top 5 da Semana </h1>     
            <div class="container-top5" >  
                <% var index = 0 %>                         
                <% for(var i= recebeBd.length-1; i > recebeBd.length-6; i--) { %>               
                    <div class="card">                  
                        <img id=<%= 'imgTop5-' + index  %>   src= <%= recebeBd[i].imagem %> alt=<%= recebeBd[i].id %>>   
                        <% index++ %>
                        <div class="price"><div class="espaco"></div> R$<%= recebeBd[i].preco %></div>                           
                        <span><%= recebeBd[i].artista %></span>
                            <span><%= recebeBd[i].musica %></span>                                                                                                                                        
                    </div>                 
                 <% } %>             
            </div>
       
    

      </main>


  

      <%- include('partials/footer')%>